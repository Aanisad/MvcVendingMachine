@{
}

<form method="post" asp-action="SubmitTopup">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-black">Topup </h4>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="nominal"></label>
            <input asp-for="nominal" class="form-control" data-val="true" data-val-number="Minimal topup Rp. 5.000" data-val-required="The Price field is required." />
            <span asp-validation-for="nominal" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark" style="width:150px">Topup</button>
        <a asp-controller="Machines" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Menu
        </a>
    </div>
</form>

<br />


<p>
    Saldo anda adalah : @Model.totalNominal
</p>



