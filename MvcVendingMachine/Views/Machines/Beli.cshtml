@model MvcVendingMachine.ViewModel.MachineViewModel

@{
    ViewData["Title"] = "Beli";
}

<form asp-action="Belibtn">
    <input type="hidden" asp-for="Id" />
    <fieldset disabled>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h4 class="text-black">Pembelian Barang</h4>
                <hr />
            </div>
            <div class="form-group">
                <label asp-for="Namaproduk" class="control-label"></label>
                <input asp-for="Namaproduk" class="form-control" />
                <span asp-validation-for="Namaproduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
    </fieldset>
            <div class="form-group">
                <label asp-for="Stockout" class="control-label"></label>
                <input asp-for="Stockout" class="form-control" />
                <span asp-validation-for="Stockout" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Hargaproduk" class="control-label"></label>
                <input asp-for="Hargaproduk" class="form-control" />
                <span asp-validation-for="Hargaproduk" class="text-danger"></span>
            </div>
        </div>
   <br />

    <input type="submit" value="simpan" class="btn btn-primary text-white" asp-controller="Machines" asp-action="Belibtn" asp-route-id="@Model.Id" />
    <a asp-controller="Machines" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Menu
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
