@model MvcVendingMachine.Models.Machine


<h4>Tambah Data</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-black">Tambah Data </h4>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Namaproduk" class="control-label"></label>
            <input asp-for="Namaproduk" class="form-control" />
            <span asp-validation-for="Namaproduk" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock" class="control-label"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Hargaproduk" class="control-label"></label>
            <input asp-for="Hargaproduk" class="form-control" />
            <span asp-validation-for="Hargaproduk" class="text-danger"></span>
        </div><br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>
<br /><br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<h4>List Barang</h4>

    <form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Namaproduk)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hargaproduk)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in ViewBag.mesin)
            {
                <tr>
                    <td>
                        @item.Namaproduk
                    </td>
                    <td>
                        @item.Stock
                    </td>
                    <td>
                        @item.Hargaproduk
                    </td>
                    <td>
                        <button class="btn btn-primary btn-link text-white" asp-action="Delete" asp-route-id="@item.Id">Delete</button> |
                        <button class="btn btn-primary btn-link text-white" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
