@model MvcVendingMachine.Models.Machine

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Namaproduk" class="control-label"></label>
                <input asp-for="Namaproduk" class="form-control" />
                <span asp-validation-for="Namaproduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hargaproduk" class="control-label"></label>
                <input asp-for="Hargaproduk" class="form-control" />
                <span asp-validation-for="Hargaproduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
